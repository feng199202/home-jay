<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tarena.netctoss.entity">

	<class name="Role" table="t_role">

		<id name="roleId" column="role_id">
			<generator class="native" />
		</id>
		<property name="roleName" column="role_name" length="20" />
		<set name="admins" inverse="true">
			<key column="role_id" />
			<one-to-many class="com.tarena.netctoss.entity.Admin" />
		</set>
		<set name="rights" table="t_role_right" lazy="false" >
			<key column="role_id" />
			<many-to-many class="com.tarena.netctoss.entity.Right"
				column="right_id" />
		</set>

	</class>

</hibernate-mapping>  