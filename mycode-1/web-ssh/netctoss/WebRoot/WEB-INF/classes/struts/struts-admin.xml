<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

	<package name="admin-default" extends="netctoss-default"
		namespace="/admin">
		<default-action-ref name="validateCodeAction"></default-action-ref>
		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>
		<!-- 管理员登陆 -->
		<action name="adminLoginAction" class="adminLoginAction">
			<result name="login">
				/admin.jsp
			</result>
			<result name="login_failed">
				/admin.jsp
			</result>
			<result name="login_success">
				/WEB-INF/jsp/manager/index.jsp
			</result>
			<result name="index_menu">
				/WEB-INF/jsp/manager/menu.jsp
			</result>
			<result name="index_map">
				/WEB-INF/jsp/manager/map.jsp
			</result>
			<result name="index_top">
				/WEB-INF/jsp/manager/top.jsp
			</result>
			<result name="index_bottom">
				/WEB-INF/jsp/manager/bottom.jsp
			</result>
		</action>
		<action name="validateCodeAction" class="validateCodeAction">
			<result name="login" type="stream">
				<param name="inputName">inputStream</param>
				<param name="contentType">image/jpeg</param>
			</result>
		</action>
		<!-- 管理员退出 -->
		<action name="adminLogoutAction" class="adminLogoutAction">
			<result name="logout_success">
				/admin.jsp
			</result>
			<result name="error">
				/error.jsp
			</result>
		</action>
		<!-- 资费管理 -->
		<action name="magePricingAction" class="magePricingAction">

		</action>

		<!-- 用户管理 -->
		<action name="manageUserAction" class="manageUserAction">


		</action>

		<!-- 帐务管理 -->
		<action name="manageAccountAction" class="manageAccountAction">

			<result name="list_account_yearly">
				/WEB-INF/jsp/account/acct_year.jsp
			</result>
			<result name="list_account_monthly">
				/WEB-INF/jsp/account/acct_year_detail.jsp
			</result>
			<result name="account_month">
				/WEB-INF/jsp/account/acct_month.jsp
			</result>
			<result name="account_dayly">
				/WEB-INF/jsp/account/acct_month_detail.jsp
			</result>

		</action>
		<!-- 账单管理 -->
		<action name="manageReckonAction" class="manageReckonAction">
			<result name="show_reckon">
				/WEB-INF/jsp/reckon/reckon.jsp
			</result>
			<result name="show _day_reckon">
				/WEB-INF/jsp/reckon/reckondetail.jsp
			</result>
		</action>

		<!-- 管理员管理 -->
		<action name="manageAdminAction" class="manageAdminAction">
			<result name="show_self_info">
				/WEB-INF/jsp/admin/admin_info.jsp
			</result>
			<result name="update_success">
				/WEB-INF/jsp/admin/update_success.jsp
			</result>
			<result name="to_update_password">
				/WEB-INF/jsp/admin/update_password.jsp
			</result>
			<result name="show_add_admin">
				/WEB-INF/jsp/admin/add_admin.jsp
			</result>
			<result name="list_admins">
				/WEB-INF/jsp/admin/admin_browse.jsp
			</result>
			<result name="to_update_admins">
				/WEB-INF/jsp/admin/admin_for_update.jsp
			</result>
			<result name="to_delete_admins">
				/WEB-INF/jsp/admin/admin_for_del.jsp
			</result>
			<result name="update_admin_info">

				/WEB-INF/jsp/admin/update_admin.jsp
			</result>
		</action>

		<!-- 权限管理 -->
		<action name="manageRoleRightAction" class="manageRoleRightAction">
			<result name="list_rights">
				/WEB-INF/jsp/rights/right_browse.jsp
			</result>
			<result name="to_add_right">
				/WEB-INF/jsp/rights/right_add.jsp
			</result>
			<result name="to_update_right">
				/WEB-INF/jsp/rights/right_update.jsp
			</result>
			<result name="to_update_rights">
				/WEB-INF/jsp/rights/right_for_update.jsp
			</result>
			<result name="to_delete_rights">
				/WEB-INF/jsp/rights/right_for_del.jsp
			</result>

			<result name="to_browse_roles">
				/WEB-INF/jsp/rights/roles_browse.jsp
			</result>
			<result name="to_update_role">
				/WEB-INF/jsp/rights/role_update.jsp
			</result>

			<result name="to_update_roles">
				/WEB-INF/jsp/rights/roles_for_update.jsp
			</result>
			<result name="to_delete_roles">
				/WEB-INF/jsp/rights/roles_for_del.jsp
			</result>

			<result name="to_add_Role">
				/WEB-INF/jsp/rights/role_add.jsp
			</result>
		</action>
	</package>

</struts>
