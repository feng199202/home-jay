<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

	<package name="user-default" extends="netctoss-default"
		namespace="/user">
		<default-action-ref name="validateCodeAction"></default-action-ref>
		<action name="userAction" class="userAction">
			<result name="success" type="dispatcher">
				/WEB-INF/jsp/user/index.jsp
			</result>
			<result name="login" type="dispatcher">
				/index.jsp
			</result>
			<result name="loginWrong" type="dispatcher">
				/index.jsp
			</result>
			<result name="list_selfInfo" type="dispatcher">
				/WEB-INF/jsp/user/userShow.jsp
			</result>
			<result name="update_password">
				/WEB-INF/jsp/user/update_password.jsp
			</result>
			<result name="update_password_success">
				/WEB-INF/jsp/user/map.jsp
			</result>
			<result name="to_update_self_info">

				/WEB-INF/jsp/user/acct_update.jsp

			</result>
			<result name="toSearch" type="dispatcher">
				/WEB-INF/jsp/selfservice/reckon.jsp
			</result>


			<result name="toList" type="dispatcher">
				/WEB-INF/jsp/selfservice/reckon.jsp
			</result>

			<result name="toShowDetail" type="dispatcher">
				/WEB-INF/jsp/selfservice/reckondetail.jsp
			</result>
			<result name="index_menu">
				/WEB-INF/jsp/user/menu.jsp
			</result>
			<result name="index_map">
				/WEB-INF/jsp/user/map.jsp
			</result>
			<result name="index_top">
				/WEB-INF/jsp/user/top.jsp
			</result>
			<result name="index_bottom">
				/WEB-INF/jsp/user/bottom.jsp
			</result>
		</action>
		<action name="validateCodeAction" class="validateCodeAction">
			<result name="login" type="stream">
				<param name="inputName">inputStream</param>
				<param name="contentType">image/jpeg</param>
			</result>
		</action>
		<action name="userLogoutAction" class="userLogoutAction">

			<result name="logout_success">
				/index.jsp
			</result>
			<result name="error">
				/error.jsp
			</result>

		</action>
	</package>
</struts>
